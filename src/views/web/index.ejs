            <article class="col-12">
     <!--        <h2 class="display-4 text-white bg-info text-center mt-4 p-2">Platos recomendados</h2> --->
            </article>
            <% for(let i= 0; i < platos.length; i++){ %>
                <%if(platos[i].recomendado== 1){%>
                <article class="col-12 col-md-6 col-lg-3 card p-2 efecto tarjeta">
                  <figure >
                    <img  src="/images/platos/<%= platos[i].imagen%> " class="card-img-top w-100 " alt="Plato">
                  </figure>
                    <% if (platos[i].descuento == 30) { %>
                      <img class="descuento" src="img/promo30.png" alt="Descuento 30%">  
                    <% }else if(platos[i].descuento == 15 ){ %>
                      <img class="descuento" src="img/promo15.png" alt="Descuento 30%">
                    <% } %>
                  <div class="card-body">
                    <h5 class="card-title"><%= platos[i].nombre%></h5>
                    <h5 class="card-title" >$  <%= platos[i].precio%> </h5>
                    <p class="card-text descripcion"><%= platos[i].descripcion%> </p>
                    <a href="#" class="btn btn-primary">Ver detalle</a>
                  </div>
                </article>
              <% } %>
            <% } %>
          </section>
          <section class="col-sm-12 col-md-4 col-lg-4 index-social-cart">
